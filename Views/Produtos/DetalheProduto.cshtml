@model Projeto_Final.Models.Produto

@{
    Layout = null;
    ViewBag.Title = "DetalheProduto";
}

@using (Html.BeginForm("DetalheProduto", "Produtos", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="center-column">
        @if (String.IsNullOrEmpty(Model.Foto))
        {
            <img src="@Url.Content("~/fotos/Produtos/nofoto.png")" alt="foto" class="client-photo2" />
        }
        else
        {
            <img src="@Url.Content("~/fotos/Produtos/" + Model.Foto)" alt="foto" class="client-photo2" />
        }
        <div style="clear:both;"></div>

        <dl class="dl-horizontal">
            <dt class="left-text">
                @Html.DisplayNameFor(model => model.SKU)
            </dt>
            <dd class="left-text">
                @Html.DisplayFor(model => model.SKU)
            </dd>

            <dt class="left-text">
                @Html.DisplayNameFor(model => model.Marca)
            </dt>
            <dd class="left-text">
                @Html.DisplayFor(model => model.Marca)
            </dd>

            <dt class="left-text">
                @Html.DisplayNameFor(model => model.Modelo)
            </dt>
            <dd class="left-text">
                @Html.DisplayFor(model => model.Modelo)
            </dd>

            <dt class="left-text">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="left-text">
                @Html.DisplayFor(model => model.Categoria)
            </dd>

            <dt class="left-text">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="left-text">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>

            <dt class="left-text">
                @Html.DisplayNameFor(model => model.Caracteristicas)
            </dt>
            <dd class="left-text">
                @Html.DisplayFor(model => model.Caracteristicas)
            </dd>

            <dt class="left-text">
                @Html.DisplayNameFor(model => model.Preço)
            </dt>
            <dd class="left-text">
                @Html.DisplayFor(model => model.Preço)
            </dd>
        </dl>
    </div>
}

<style>
    .center-column {
        margin: 0 auto;
        text-align: center;
        width: 50%;
    }

    .left-text {
        text-align: left;
    }

    .center-text {
        text-align: left;
    }

    .label {
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .value {
        color: #777;
        margin-bottom: 10px;
    }

    .client-photo2 {
        width: 100%;
        max-width: 400px;
        margin-bottom: 20px;
    }
</style>
